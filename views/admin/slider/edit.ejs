<div class="content">

    <div class="header">

        <h1 class="page-title">编辑图片</h1>
    </div>

    <ul class="breadcrumb">
        <li><a href="index.html">首页</a> <span class="divider">/</span></li>
        <li><a href="users.html">图片</a> <span class="divider">/</span></li>
        <li class="active">编辑</li>
    </ul>

    <div class="container-fluid">
        <div class="row-fluid">

            <div class="btn-toolbar">

                <div class="btn-group">
                </div>
            </div>
            <div class="well">
                <form method="post" action="<%= host%>admin/slider/edit/editPost"  enctype="multipart/form-data">
                    <label>标题</label>
                    <input type="text" name="tittle" value="<%=result.tittle%>" class="input-xlarge">
                    <label>描述</label>
                    <input type="text" name="description" value="<%=result.description%>" class="input-xlarge">
                    <label>图片</label>
                    <input type="file" name="img">
                    <label>轮播图链接</label>
                    <input type="text" name="href" value="<%=result.href%>" >
                    <input type="submit" class="btn btn-primary" value="提交">
                    <input type="hidden" name="id" value="<%=result._id%>" >
                </form>

            </div>


        </div>
    </div>
</div>

