<div class="content">

    <div class="header">

        <h1 class="page-title">Add User</h1>
    </div>

    <ul class="breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li><a href="users.html">Article</a> <span class="divider">/</span></li>
        <li class="active">Add</li>
    </ul>

    <div class="container-fluid">
        <div class="row-fluid">

            <div class="btn-toolbar">
                <!--<button class="btn btn-primary"><i class="icon-save"></i> 提交添加</button>-->
                <!--<a href="#myModal" data-toggle="modal" class="btn">Delete</a>-->

                <div class="btn-group">
                </div>
            </div>
            <div class="well">
                <!--<ul class="nav nav-tabs">
                    <li class="active"><a href="#home" data-toggle="tab">基本信息</a></li>
                    <li><a href="#profile" data-toggle="tab">密码</a></li>
                </ul>-->
                <form method="post" action="<%=host%>admin/administrator/edit/doEdit" >
                    <input type="hidden" name="id" value="<%=result._id%>" >
                    <label>姓名</label>
                    <input type="text" name="username" value="<%=result.username%>" class="input-xlarge">
                    <label>职务</label>
                    <input type="type" name="position" value="<%=result.position%>" class="input-xlarge">
                    <label>性别</label>
                    <select name="sex" id="cate" class="input-xlarge">
                        <option value="<%=result.sex%>">男</option>
                        <option value="<%=result.sex%>">女</option>
                    </select>
                    <label>手机号码</label>
                    <input type="text" name="tel" value="<%=result.tel%>" class="input-xlarge">
                    <label>密码设置</label>
                    <input type="password" name="password" value="" class="input-xlarge">
                    <br/>
                    <br/>
                    <input type="submit" class="btn btn-primary" value="提交">
                </form>

            </div>

            <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Delete Confirmation</h3>
                </div>
                <div class="modal-body">
                    <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete
                        the user?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    <button class="btn btn-danger" data-dismiss="modal">Delete</button>
                </div>
            </div>


